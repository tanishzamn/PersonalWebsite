        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Launch Express Server",
                "program": "${workspaceFolder}/app.js",  // Point to your main Express app file
                "outFiles": [
                    "${workspaceFolder}/**/*.js"
                ],
                "env": {
                    "PORT": "3000"  // You can set the port here if needed
                },
                "console": "integratedTerminal"  // Use the integrated terminal for output
            }
        ]
    }
    